public class XMPPUtilsTest {

	
	@Test
	public void testCreateXMPPConnection() {
		XMPPConnection xmppConnection=XMPPUtil.createXMPPConnection();
		assertNotNull(xmppConnection);
		XMPPUtil.relaseXMPPConnection(xmppConnection);
	}

	@Test
